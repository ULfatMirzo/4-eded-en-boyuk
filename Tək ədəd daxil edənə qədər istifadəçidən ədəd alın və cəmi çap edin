using System;

class Program
{
    static void Main()
    {
        int sum = 0;
        int num;

        do
        {
            Console.Write("Ədəd daxil edin: ");
            num = int.Parse(Console.ReadLine());
            sum += num;
        } while (num % 2 == 0);

        Console.WriteLine("Daxil edilən ədədlərin cəmi: " + sum);
    }
}
