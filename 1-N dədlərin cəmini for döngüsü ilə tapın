using System;

class Program
{
    static void Main()
    {
        Console.Write("N daxil edin: ");
        int N = int.Parse(Console.ReadLine());

        int sum = 0;
        for (int i = 1; i <= N; i++)
        {
            sum += i;
        }

        Console.WriteLine($"1-dən {N}-ə qədər ədədlərin cəmi = {sum}");
    }
}
