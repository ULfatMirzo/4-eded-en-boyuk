using System;

class Program
{
    static void Main()
    {
        Console.Write("Ədədi daxil edin: ");
        int number = int.Parse(Console.ReadLine());

        double sqrt = Math.Sqrt(number);  // Kvadrat kök

        if (sqrt == (int)sqrt)
        {
            Console.WriteLine($"{number} = {sqrt}^2, yəni bu ədəd hansısa ədədin kvadratıdır.");
        }
        else
        {
            Console.WriteLine($"{number} heç bir tam ədədin kvadratı deyil.");
        }
    }
}
