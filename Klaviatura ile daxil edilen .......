using System;

class Program
{
    static void Main()
    {
        Console.Write("Ədədi daxil edin: ");
        string number = Console.ReadLine();

        string reversed = "";

        for (int i = number.Length - 1; i >= 0; i--)
        {
            reversed += number[i];
        }

        if (number == reversed)
        {
            Console.WriteLine($"{number} palindromdur.");
        }
        else
        {
            Console.WriteLine($"{number} palindrom deyil.");
        }
    }
}
